@model Data_Details.Models.customerDataModel

@{
    ViewData["Title"] = "Delete";
}

@if (TempData["error-message-91"] != null)
{
    <div id="error-message-91" class="alert alert-danger">
        @TempData["error-message-91"].ToString()
    </div>
}
<script src="~/js/site.js"></script>
<h1>Delete</h1>
<img src="~/favicon.ico" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        @*<dt class = "col-sm-2">
                ID
            </dt>*@
        @*<dd class = "col-sm-10">
                @Html.DisplayFor(model => model.id)
            </dd>*@
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First_name)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Last_name)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gender)
        </dd>
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_name)
        </dd>
        <dt class="col-sm-2">
            Product Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <div class="text-center">
        @*Button HTML (to Trigger Modal)*@
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>

    </div>
    <div><a asp-action="Index">Back to List</a></div>
    @*<form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>*@
</div>

<!--<div class="text-center">-->
<!-- Button HTML (to Trigger Modal) -->
<!--<a href="#myModal" class="trigger-btn" data-toggle="modal">Click to Open Confirm Modal</a>
</div>-->
<!-- Modal HTML -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header flex-column">

                <h4 class="modal-title w-100">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Do you really want to delete these records? This process cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                @*<button type="button" class="btn btn-danger">Delete</button>*@
                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger" />

                </form>
            </div>
        </div>
    </div>
</div>
